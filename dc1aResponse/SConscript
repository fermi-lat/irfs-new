import glob,os,platform

Import('baseEnv')
Import('listFiles')
progEnv = baseEnv.Clone()
libEnv = baseEnv.Clone()

if platform.system() == 'Linux':
        progEnv.Append(CPPDEFINES = 'TRAP_FPE')

dc1aResponseLib = libEnv.StaticLibrary('dc1aResponse', listFiles(['src/*.cxx']))

progEnv.Tool('dc1aResponseLib')
test_dc1aResponseBin = progEnv.Program('test_dc1aResponse', listFiles(['src/test/*.cxx']))

progEnv.Tool('registerObjects', package = 'dc1aResponse', libraries = [dc1aResponseLib], testApps = [test_dc1aResponseBin], includes = listFiles(['dc1aResponse/*.h']))